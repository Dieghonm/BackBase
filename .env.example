# === CONFIGURAÇÕES DE DESENVOLVIMENTO LOCAL ===

# Banco de dados (SQLite para desenvolvimento local)
DATABASE_URL=sqlite:///./banco.db

# JWT - Chave secreta (GERAR UMA NOVA EM PRODUÇÃO!)
SECRET_KEY=dev-super-secret-key-change-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações JWT específicas (compatibilidade com código)
JWT_SECRET_KEY=dev-super-secret-key-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# API Settings
DEBUG=true
API_VERSION=1.0.0
API_TITLE=BackBase API

# Rate Limiting (configurações por minuto)
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_CADASTRO=3/minute

# CORS (para desenvolvimento local - permite tudo)
CORS_ORIGINS=["*"]

# Logs
LOG_LEVEL=INFO
LOG_FILE=app.log

# Configurações de desenvolvimento (opcionais)
ENVIRONMENT=development
PORT=8000
HOST=0.0.0.0