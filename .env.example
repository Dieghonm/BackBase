# ============================================================================
# BACKBASE API - CONFIGURAÇÕES DE DESENVOLVIMENTO LOCAL
# ============================================================================

# ============================================================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ============================================================================
APP_NAME=Enden Map
APP_VERSION=1.0.0
APP_DESCRIPTION=API para gerenciamento de usuários com autenticação JWT
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ============================================================================
# BANCO DE DADOS
# ============================================================================
# SQLite para desenvolvimento local
DATABASE_URL=sqlite:///./banco.db

# ============================================================================
# CONFIGURAÇÕES DE SEGURANÇA E JWT
# ============================================================================
# JWT - Chave secreta (GERAR UMA NOVA EM PRODUÇÃO!)
SECRET_KEY=LocalhostPassword
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Configurações JWT específicas (compatibilidade com código existente)
JWT_SECRET_KEY=LocalhostPassword
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Configurações de senha
MIN_PASSWORD_LENGTH=8


# ============================================================================
# API SETTINGS
# ============================================================================
API_VERSION=1.0.0
API_TITLE=Enden Map
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# ============================================================================
# RATE LIMITING
# ============================================================================
# Configurações por minuto - ajustadas para melhor segurança
RATE_LIMIT_LOGIN=10/minute
RATE_LIMIT_CADASTRO=5/minute

# ============================================================================
# CORS
# ============================================================================
# Para desenvolvimento local - origens específicas (mais seguro que "*")
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# ============================================================================
# LOGS
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ============================================================================
CREATE_INITIAL_USERS=true

SERVER_PASSWORD = DUOESTUDIO

# ============================================================================
# BREVO EMAIL SERVICE
# ============================================================================
# Obtenha sua API key em: https://app.brevo.com/settings/keys/api

# Sua chave de API do Brevo
BREVO_API_KEY=seu-api-key-aqui

# Email de origem (de quem os emails serão enviados)
BREVO_SENDER_EMAIL=noreply@backbase.com

# Nome de quem envia os emails
BREVO_SENDER_NAME=Enden Map

# Ativar/desativar envio de emails (true/false)
EMAIL_ENABLED=true

# ============================================================================
# BREVO EMAIL SERVICE
# ============================================================================
# Obtenha sua API key em: https://app.brevo.com/settings/keys/api

# Sua chave de API do Brevo
BREVO_API_KEY=seu-api-key-aqui

# Email de origem (de quem os emails serão enviados)
BREVO_SENDER_EMAIL=noreply@backbase.com

# Nome de quem envia os emails
BREVO_SENDER_NAME=Enden Map

# Ativar/desativar envio de emails (true/false)
EMAIL_ENABLED=true