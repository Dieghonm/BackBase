# ============================================================================
# BACKBASE API - CONFIGURAÇÕES DE DESENVOLVIMENTO LOCAL
# ============================================================================

# ============================================================================
# CONFIGURAÇÕES GERAIS DA APLICAÇÃO
# ============================================================================
APP_NAME=BackBase API
APP_VERSION=1.0.0
APP_DESCRIPTION=API para gerenciamento de usuários com autenticação JWT
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# ============================================================================
# BANCO DE DADOS
# ============================================================================
# SQLite para desenvolvimento local
DATABASE_URL=sqlite:///./banco.db

# ============================================================================
# CONFIGURAÇÕES DE SEGURANÇA E JWT
# ============================================================================
# JWT - Chave secreta (GERAR UMA NOVA EM PRODUÇÃO!)
SECRET_KEY=dev-super-secret-key-change-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Configurações JWT específicas (compatibilidade com código existente)
JWT_SECRET_KEY=dev-super-secret-key-change-in-production-2024
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200

# Configurações de senha
MIN_PASSWORD_LENGTH=8

# ============================================================================
# API SETTINGS
# ============================================================================
API_VERSION=1.0.0
API_TITLE=BackBase API
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# ============================================================================
# RATE LIMITING
# ============================================================================
# Configurações por minuto - ajustadas para melhor segurança
RATE_LIMIT_LOGIN=10/minute
RATE_LIMIT_CADASTRO=5/minute

# ============================================================================
# CORS
# ============================================================================
# Para desenvolvimento local - origens específicas (mais seguro que "*")
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:8080"]

# ============================================================================
# LOGS
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# ============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ============================================================================
CREATE_INITIAL_USERS=true